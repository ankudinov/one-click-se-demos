{
    "files.associations": {
        "**.yml.jinja": "jinja-yaml",
        "**.sh.jinja": "jinja-shell",
        ".md.jinja": "jinja-markdown",
        "**.json.jinja": "jinja-json",
        "**.py.jinja": "jinja-python",
        "**Dockerfile.jinja": "jinja-dockerfile",
        "**.txt.jinja": "jinja",
        "**Makefile.jinja": "jinja",
        "**.cfg.jinja": "jinja"
    },
    "markdown.marp.themes": [
        "./slides/themes/dracula.css",
        "./slides/themes/beam.css",
        "./slides/themes/einstein.css",
        "./slides/themes/jobs.css"
    ],
    "markdownlint.config": {
        "default": true,
        // allow multiple H1s for Marp
        "MD025": false,
        "MD033": {
            "allowed_elements": [
                "div",
                "span",
                "style",
                "br",
                "sup"
            ]
        },
        // disable as MD046 is not behaving correctly with Mkdocs
        "MD046": false
    },
    "markdown.marp.enableHtml": true
}